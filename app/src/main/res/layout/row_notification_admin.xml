<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bcbusdetails"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_Notificationtime"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="@dimen/_10sdp"
       android:layout_marginTop="@dimen/_10sdp"
       android:id="@+id/T_NotificationTitle"
       android:layout_below="@+id/T_Notificationtime"
       android:textColor="#000"
       android:layout_marginLeft="@dimen/_10sdp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/T_NotificationMessage"
        android:layout_below="@+id/T_NotificationTitle"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        />

</RelativeLayout>