<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bcbusdetails"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_Notificationtime"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/T_NotificationStudent"
        android:layout_below="@+id/T_Notificationtime"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/T_NotificationTitle"
        android:layout_below="@+id/T_NotificationStudent"
        android:layout_marginRight="@dimen/_10sdp"

        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/T_NotificationMessage"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/T_NotificationTitle"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/T_From"
        android:text="@string/from"
        android:layout_below="@+id/T_NotificationMessage"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_80sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/Date_From"
        android:layout_toRightOf="@+id/T_From"
        android:layout_below="@+id/T_NotificationMessage"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/T_To"
        android:text="@string/to"
        android:layout_below="@+id/T_From"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_80sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/Date_To"
        android:layout_below="@+id/T_From"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/T_From"
        />

</RelativeLayout>